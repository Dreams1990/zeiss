
.info {
  margin-top:159rpx;
  width: 100%;
  flex-wrap: wrap;
  display: flex;
  justify-content: space-between;
}
.info.m {
  margin-top:110rpx;
}
.info p{
  width: 100%;
  display: block;
}
.info p.price em{
  text-decoration:line-through;
  padding-left: 10rpx;
}
.info p.yuan em{
  color:#ee514a
}
.info p.price span{
  color:#ee514a
}
.index .title{
  height: 88rpx;
  line-height: 44rpx;
  overflow: hidden;
  display: block;
  font-size: 30rpx;

}

.index .result_item{
  width: 49%;
  float: left;
  background: #fff;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
/* .index .result_item:nth-child(2n){
    margin-right: 2%;
} */
.index .result_item image{
  width: 100%
}


.index .price{
  display: block;
}
.index .price i{
  float: right;
  margin-bottom:10rpx;
}

.search_box input{
    width: 72%;
    box-sizing: border-box;
    float: left;
}
.search_box button{
    width: 25%;
    box-sizing: border-box;
    float: right;
    margin-top: 20rpx;
    height: 72rpx;
    line-height: 72rpx
}
.search_box{
  width: 100%;
}

.input_box{
  width: 100%;
  display: block;
  height: 72rpx
}
.search_img{
  display: block;
  width: 100px;
  height:100px;
  margin: 0 auto;
}
.search_box .search_img{
  display: none;
}
.sort {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 12rpx;
  float: left;
  width: 100%;
}
.sort li{
  width: 16%;
  text-align: center;
  display: inline-block;
  font-size: 24rpx;
}
.sort li.border{
 box-sizing: border-box;
 border-right:1px solid #000
}

.sort li.cur{
  color:#ee514a
}

.none{
  display: none
}

.center{
  top:30%;
  left:50%;
  transform: translate(-50%,-50%);
}
.center .search_img{
  display: block;
}
.popup{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}
.inner{
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow:scroll;
  position: absolute;
  box-sizing: border-box;
  padding-bottom: 160rpx;
  background: #fff;
}

.popup image{
  width: 100%;
  display: block;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  float: left;
}

.close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 3;
  background: #fff;

}
.popup button {
  position: absolute;
  bottom: 20rpx;
  left:50%;
  transform: translateX(-50%);
  z-index: 3;
  background: #fff;
  font-size: 26rpx;
  line-height: 85rpx;
  height: 85rpx;
  background: #ffba00;
  color: #fff;
  text-align: center;
  border: none;
  width: 90%;

}
.getTickets{
  background: #ffba00;
  color: #fff;
  text-align: center;
  border: none;
  width: 90%;
  font-size: 26rpx;
  line-height: 40rpx;
  height: 40rpx;
  margin: 0 auto;
}
.close img{
  width: 50rpx;
  height: 50rpx;
}

.quan{
  width:95%;
  background: #ffba00;
  color: #fff;
  text-align: center;
  border: none;
  font-size: 30rpx;
  line-height: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-bottom:5rpx;
}
.quan em{  font-weight: 800;
}
