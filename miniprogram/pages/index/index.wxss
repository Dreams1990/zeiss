/**index.wxss**/
.container{
  width: 100%;
}
.page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.modal{
  position: fixed;
  width: 600rpx;
  height: 520rpx;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  background-color: #fff;
  border-radius: 4rpx;
  z-index: 99;
}
.modal .title{
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-bottom: 1px solid #f0f0f0;
  width: 100%;
  font-size: 34rpx;
  display: block;
  color: rgba(0,0,0,.65);
}
.modal input{
  width: 450rpx;
  margin: 80rpx auto;
  padding: 10rpx;
  border: 1px solid #d9d9d9;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 2rpx;
  font-size: 30rpx;
}
.modal .btn{
  background: #1890ff;
  color: #fff;
  width: 470rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  margin: 0 auto;
  font-size: 30rpx;
  border-radius: 2rpx;
  text-align: center;
}
.modal .close{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.modal image{
  width: 30rpx;
  height: 30rpx;
}
.footer{
  position: fixed;
  height: 140rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
}

.btn{
  background: #1890ff;
  color: #fff;
  width: 470rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  margin: 0 auto;
  font-size: 30rpx;
  border-radius: 2rpx;
  text-align: center;
  margin-top: 20rpx;
}
.list{
  position: relative;
  width: 100%;
  height: 100vh;
  float: left;
  padding: 20rpx;
  box-sizing: border-box;
}
.empty{
  position: absolute;
  top: 40%;
  transform:translateY(-40%);
  width: 100%;
  text-align: center;
}

.list image{
  width: 128rpx;
  height: 128rpx;
}
.list .tip{
  width: 100%;
  text-align: center;
  display: block;
  color: rgba(0,0,0,.65);
}
.item{
  background:rgb(135, 208, 104);
  margin-right: 20rpx;
  margin-left: 20rpx;
  padding: 10rpx 30rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  border-radius: 4rpx;
  color: #fff;
}