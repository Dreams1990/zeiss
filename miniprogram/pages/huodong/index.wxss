  .banner-wrapper {
    display: block;
    position: relative;
    width: 100%;
    height: 338rpx;

  }

  .banner {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .img-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .image {
    display: block;
    position: relative;
    width: 690rpx;
    height: 250rpx;
    margin: 30rpx auto;
    border-radius: 30rpx;
    box-shadow: 0 6rpx 36rpx rgba(181, 184, 197, 0.55);
  }

  .dots {
    display: inline-flex;
    justify-content: center;
    position: absolute;
    bottom: 30rpx;
    left: 0;
    width: 100%;
    height: 8rpx;
    text-align: center;
  }

  .dot {
    width: 8rpx;
    height: 100%;
    margin: 0 4rpx;
    border-radius: 4rpx;
    background: #ee514a;
    box-sizing: border-box;
  }

  .cur {
    width: 24rpx;
  }

  .cvs {
    margin-top: 20rpx;
    position: relative;
    height: 184rpx;
    display: flex;
    width: 100%;
    padding:0 30rpx;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: space-between;
  }

  .cv {
    height: 100%;
    width: 25%;
    float: left;
    display: flexbox;
  }



  .avatar {
    width: 110rpx;
    height: 110rpx;
    margin: 0 auto;
    margin-bottom: 10rpx;
    display: block;
    border: 1rpx solid rgba(152, 163, 183, 0.2);
    border-radius: 50%;
  }

  .nickname {
    width: 100%;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
    font-size: 28rpx;
    color: rgb(72, 97, 122);
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }
  .container-wrapper{
    width: 100%;

  }
  .container02 {

    position: relative;
    width: 690rpx;
    height: 100%;
    margin: 0 auto;
    background-color: #f4f4f5;
    border-radius: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 0 16rpx rgba(233, 235, 243, 0.4);

    overflow: hidden;

  }

  .more-wrapper {
    display: flex;
    align-items: center;
    position: absolute;
    top: 20rpx;
    right: 36rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-weight: 600;
    font-size: 24rpx;
    color: rgb(131, 107, 255);
    z-index: 10;
  }

  .icon-more {
    width: 18.4rpx;
    height: 20rpx;
  }

  .title {
    position: relative;
    display: flex;
    align-items: center;
    height: 30rpx;
    margin-top: 30rpx;
    margin-left: 30rpx;
  }

  .icon {
    width: 8rpx;
    height: 28rpx;
    margin-right: 10rpx;
    border-radius: 4rpx;
    background-color: rgb(131, 107, 255);
  }

  .title-text {
    font-weight: 700;
    font-size: 28rpx;
    color: #132330;
  }

  .albums-wrapper {
    position: relative;
    height: 248rpx;
    margin-top: 32rpx;
    white-space: nowrap;
    box-sizing: border-box;
  }

  .album {
    display: inline-flex;
    flex-direction: column;
    height: 150rpx;
    margin-left: 24rpx;
  }

  .album:first-child {
    margin-left: 30rpx;
  }

  .album:last-child {
    margin-right: 30rpx;
  }

  .cover-wrapper {
    position: relative;
    flex: 0 0 auto;
    width: 160rpx;
    margin-bottom: 10rpx;
  }

  .cover {
    display: block;
    width: 100%;
    border: 1rpx solid rgba(152, 163, 183, 0.2);
    border-radius: 6rpx;
    box-sizing: border-box;
  }

  .play-times-mask {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 56rpx;
    border-radius: 6rpx;
    background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.2)));
  }

  .play-times {
    position: absolute;
    display: flex;
    align-items: center;
    left: 14rpx;
    bottom: 8rpx;
    width: 100%;
    height: 34rpx;
  }

  .play {
    width: 34rpx;
    height: 34rpx;
  }

  .count {
    height: 20rpx;
    line-height: 20rpx;
    font-weight: 600;
    font-size: 24rpx;
    color: #fff;
  }

  .name-wrapper{
    width: 160rpx;
    height: 52rpx;
  }
  .name {
    line-height: 26rpx;
    font-weight: 700;
    font-size: 22rpx;
    color: rgb(72, 97, 122);
    white-space:pre-wrap;
  }

  .name-fix {
    margin-left: 0rpx;
  }

  .up {
    max-width: 170rpx;
    height: 20rpx;
    line-height: 20rpx;
    margin-top: 10rpx;
    font-weight: 600;
    font-size: 20rpx;
    color: rgb(132, 146, 166);
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }

  .popup{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 11;
  
  }
  .mask{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
  }
  .inner{
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow:scroll;
    position: absolute;
    box-sizing: border-box;
    padding-bottom: 160rpx;
    background: #fff;
  }
  
  .popup image{
    width: 100%;
    display: block;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    float: left;
  }
  
  .close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 50rpx;
    height: 50rpx;
    z-index: 3;
    background: #fff;
  
  }
  .popup button {
    position: absolute;
    bottom: 20rpx;
    left:50%;
    transform: translateX(-50%);
    z-index: 3;
    background: #fff;
    font-size: 26rpx;
    line-height: 85rpx;
    height: 85rpx;
    background: #ffba00;
    color: #fff;
    text-align: center;
    border: none;
    width: 90%;
  
  }
  .getTickets{
    background: #ffba00;
    color: #fff;
    text-align: center;
    border: none;
    width: 90%;
    font-size: 26rpx;
    line-height: 40rpx;
    height: 40rpx;
    margin: 0 auto;
  }
