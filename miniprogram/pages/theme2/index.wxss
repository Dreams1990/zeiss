.info {
  float: left;
  width: 100%;
}
.info p{
  width: 100%;
  display: block;
}
.info p.yuan span{
  text-decoration:line-through;
}
.info p.yuan em{
  color:#ee514a
}
.info p.price span{
  color:#ee514a
}
.index .title{
  height: 32px;
  line-height: 32px;
  overflow: hidden;
  display: block;

}

.index .result_item{
  width: 50%;
  float: left;
  background: #fff;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
/* .index .result_item:nth-child(2n){
    margin-right: 2%;
} */
.index .result_item image{
  width: 100%
}


.index .price{
  display: block;
}

.search_box input{
    width: 72%;
    box-sizing: border-box;
    float: left;
}
.search_box button{
    width: 25%;
    box-sizing: border-box;
    float: right;
    margin-top: 10px;
    height: 36px;
    line-height: 36px
}
.search_box{
  width: 100%;
}

.input_box{
  width: 100%;
  display: block;
  height: 36px;
}
.search_img{
  display: block;
  width: 100px;
  height:100px;
  margin: 0 auto;
}
.search_box .search_img{
  display: none;
}
.sort {
  width: 100%;
  height: 20px;
  line-height: 20px;
  margin-top: 6px;
  float: left;
  width: 100%;
}
.sort li{
  width: 16%;
  text-align: center;
  display: inline-block;
  font-size:12px;
}
.sort li.border{
 box-sizing: border-box;
 border-right:1px solid #000
}

.sort li.cur{
  color:#ee514a
}

.none{
  display: none
}

.center{
  top:30%;
  left:50%;
  transform: translate(-50%,-50%);
}
.center .search_img{
  display: block;
}
.popup{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}
.inner{
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow:scroll;
  position: absolute;
  box-sizing: border-box;
  padding-bottom: 80px;
  background: #fff;
}

.popup image{
  width: 100%;
  display: block;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  float: left;
}

.close {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 25px;
  height: 25px;
  z-index: 3;
  background: #fff;

}
.popup button {
  position: absolute;
  bottom: 10px;
  left:50%;
  transform: translateX(-50%);
  z-index: 3;
  background: #fff;
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #ffba00;
  color: #fff;
  text-align: center;
  border: none;
  width: 90%;

}
.getTickets{
  background: #ffba00;
  color: #fff;
  text-align: center;
  border: none;
  width: 90%;
  font-size: 13pt;
  line-height: 20px;
  height: 20px;
  margin: 0 auto;
}
.close img{
  width: 25px;
  height: 25px;
}
